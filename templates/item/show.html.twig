{% extends 'base.html.twig' %}

{% block title %}Item :
    {{ item.name }}
{% endblock %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('items_list') }}">{% trans %}item.home{% endtrans %}</a></li>
            {% for element in path %}
            <li class="breadcrumb-item {{ (item.slug==element.slug)?'active':'' }}">
                {% if (item.slug==element.slug) %}
                    {{ element.name }}
                {% else %}
                    <a href="{{ path("item_show", {slug:element.slug}) }}">{{ element.name }}</a></li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
    {% if item.comment %}
        <div class="card bg-light mb-2">
            <div class="card-body">
                {{ item.comment }}
            </div>
        </div>
    {% endif %}
    <div>
    </div>
    <div class="list-group">
        {% for item in pagination %}
                <a class="list-group-item list-group-item-action" href="{{ path('item_show',{slug:item.slug}) }}">{% if item.isBox %} <span class="oi oi-box"></span> {% endif %}{{ item.name }}</a>

        {% else %}
            <li>{{ 'item.noresults' | trans }}</li>
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination, null, {}, {'align':'center'}) }}
    <hr>
    <div class="text-center">
        <a href="{{ path('item_add',{slug:item.slug}) }}" class="btn btn-primary">Add item</a>
    </div>

{% endblock %}
